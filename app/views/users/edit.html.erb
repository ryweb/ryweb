<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Käyttäjän tietojen muokkaus</h2></div></div></div>
<div class="border">

  <%= crumbs if permitted_to? :manage, :users %>
  
<% form_for :user,
			:url => user_path(:id => @user),
			:html => {:method => :put } do |f| -%>
  <%= f.error_messages %>
 
<p><%= label_tag 'login', 'Käyttäjätunnus' %>
<%= @user.login %></p>

<p><%= label_tag 'email', 'Sähköposti' %>
<%= f.text_field :email %></p>

<p><%= label_tag 'password', 'Salasana' %>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Salasanan vahvistus' %>
<%= f.password_field :password_confirmation %></p>

<% if current_user.user_level <= 10 %>
<p><%= label_tag 'user_level', 'Käyttäjätaso' %>
<%= f.select :user_level, @user.getOptionsForSelectList(:user_level).sort, options ={:prompt => ""} %></p>
<% end %>
  
  <p>
    <%= f.submit "Tallenna" %>
  </p>
<% end %>
</div>