<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Käyttäjätiedot: <%= @user.login %></h2></div></div></div>
<div class="border">
<div id="buttonbar">
	<%= link_to 'Muokkaa tietoja', edit_user_path, :class => 'icon icon_edit' %>
	<%= link_to 'Lisää käyttäjä', new_user_path, :class => 'icon icon_add' if permitted_to? :manage, :users %>
</div>

     <%= crumbs if permitted_to? :manage, :users %>

<p><%= label_tag 'login', 'Käyttäjätunnus' %>
<%= @user.login %></p>

<p><%= label_tag 'email', 'Sähköposti' %>
<%= @user.email %></p>

<% if current_user.user_level <= 10 %>
	<p><%= label_tag 'user_level', 'Käyttäjätaso' %>
	<%= @user.getOptionsForSelectList(:user_level).index(@user.user_level) %></p>
<% end %>
</div>