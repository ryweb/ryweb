<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Uuden käyttäjän lisääminen</h2></div></div></div>
<div class="border">

  <%= crumbs %>
  
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>

<p><%= label_tag 'login', 'Käyttäjätunnus' %>
<%= f.text_field :login %></p>

<p><%= label_tag 'email', 'Sähköposti' %>
<%= f.text_field :email %></p>

<p><%= label_tag 'password', 'Salasana' %>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Salasanan vahvistus' %>
<%= f.password_field :password_confirmation %></p>

<p><%= label_tag 'user_level', 'Käyttäjätaso' %>
<%= f.select :user_level, @user.getOptionsForSelectList(:user_level).sort, options ={:prompt => ""} %></p>

<p><%= submit_tag 'Lisää käyttäjä' %></p>
<% end -%>
</div>