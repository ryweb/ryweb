<div id="buttonbar">
	<%= link_to 'Lisää käyttäjä', new_user_path %>
</div> 
<h2>Käyttäjälista</h2>

<table>
  <thead>
  	<tr>
  	<th>Käyttäjätunnus</th>
	<th>Sähköposti</th>
	<th>&nbsp;</th>
	</tr>
  </thead>
  <tbody>
<% for user in @users %>
  <tr>
    <td><%= link_to user.login, user_path(:id => user) %></td>
	<td><%= user.email%></td>
	<% if current_user.user_level <= 10 %>
	    <td><%= link_to 'Muokkaa', edit_user_path(:id => user) %>  
    	<%= link_to 'Poista', user_path(:id => user), :confirm => 'Oletko varma?', :method => :delete %></td>
	<% else %>
		<td>&nbsp;</td>
	<% end %>
  </tr>
<% end %>
</tbody>
</table>
