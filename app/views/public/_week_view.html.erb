  <table class="occasion_list">
  <thead></thead>
  <tbody>
  <% prevWeek = ""%>
  <% for occasion in @occasions %>
    <% thisWeek = occasion.start_date_week_str %>
    <% if prevWeek.empty? || prevWeek < thisWeek %>
      <tr><td colspan ="6"><strong><%= "Viikko &nbsp;" + thisWeek.to_i.to_s %></strong></td></tr>
    <% end %>
    <% prevWeek = occasion.start_date_week_str  %>

  <tr>
    <td><%= t('date.abbr_day_names')[occasion.start_time.wday] %></td>
    <td><%= localize occasion.start_time, :format => :very_short %></td>
    <td>
      <% if occasion.start_time_only_str != "00:00" %>
        <%= occasion.start_time_only_str %>
      <% end %>
    </td>
    <td><%= occasion.name %></td>
    <td><% if occasion.location %><%= occasion.location.name %><% end %></td>
    <td><%= occasion.public_info %></td>
  </tr>
<% end %>
    </tbody>
</table>

