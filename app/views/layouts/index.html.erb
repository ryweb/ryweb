<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Ulkoasut</h2></div></div></div>
<div class="border">

<div id="buttonbar">
	<%= link_to 'Uusi ulkoasu', new_layout_path, :class => 'button icon_add' %>
</div>
<%= crumbs %>

<table style="width: 95%;">
  <tr>
    <th>Nimi</th>
    <th>Luontiaika</th>
    <th>Muokkausaika</th>
    <th colspan="2"></th>
  </tr>

<% @layouts.each do |layout| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%=h layout.name %></td>
    <td><%=localize layout.created_at, :format => :long %></td>
    <td><%=localize layout.updated_at, :format => :long %></td>
    <!--td><%= link_to 'Näytä', layout_path(:id => layout), :class => "icon icon_show" %></td-->
    <td><%= link_to 'Muokkaa', edit_layout_path(:id => layout), :class => "icon icon_edit" %></td>
    <td><%= link_to 'Poista', layout_path(:id => layout), :class => "icon icon_delete", :confirm => 'Haluatko varmasti poistaa', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

</div>
